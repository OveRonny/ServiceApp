<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(NewMainLayout)">
                <NotAuthorized>
                    <div class="container-xxl page-section mt-3">
                        <h3>Ikke autorisert</h3>
                        <p>Logg inn for å fortsette.</p>
                        <a class="btn btn-primary" href="/login">Logg inn</a>
                    </div>
                </NotAuthorized>
                <Authorizing>
                    <div class="container-xxl page-section mt-3"><em>Autoriserer…</em></div>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(NewMainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
