@page "/consumptionrecords/{vehicleId:int}"
@inject IConsumptionRecordService ConsumptionRecordService
@inject NavigationManager NavigationManager
@attribute [Authorize]


<div class="container-xxl">
    <h3>Forbruk</h3>

    <button class="btn btn-primary mb-3" @onclick="@(() => NavigationManager.NavigateTo($"/consumptionrecord/create/vehicle/{VehicleId}"))">Legg til</button>
    <div class="col-6">
        <div class="row">
            <div class="mb-3">
                <label class="form-label" for="startDate">Startdato:</label>
                <InputDate class="form-control bg-white text-dark" id="startDate" @bind-Value="startDate" @bind-Value:after="GetFilteredRecords" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="endDate">Sluttdato:</label>
                <InputDate class="form-control bg-white text-dark" id="endDate" @bind-Value="endDate" @bind-Value:after="GetFilteredRecords" />
            </div>
        </div>
    </div>

    <!-- Mobile cards (xs-sm) -->
    <div class="d-md-none">
        @foreach (var record in consumptionRecords)
        {
            <div class="card mb-2">
                <div class="card-body">
                    <div class="d-flex justify-content-between text-dark">
                        <strong>@record.Make @record.Model</strong>
                        <span>@record.Date.ToShortDateString()</span>
                    </div>
                    <div class="mt-2">
                        <div class="small text-dark">Kilometer: <strong>@record.Mileage</strong></div>
                        <div class="small text-dark">Antall liter: <strong>@record.DieselAdded</strong></div>
                        <div class="small text-dark">Pris/l: <strong>@record.DieselPricePerLiter</strong></div>
                        <div class="small text-dark">Forbruk: <strong>@(record.DieselConsumption?.ToString("F2") ?? "-")</strong></div>
                        <div class="small text-dark">Sum: <strong>@CurrencyFormatter.FormatKr(record.TotalCost)</strong></div>
                    </div>
                </div>
                <div class="card-footer d-flex gap-2">
                    <button class="btn btn-primary btn-sm" @onclick="@(() => NavigationManager.NavigateTo($"/consumptionrecord/{record.Id}"))">Rediger</button>
                    <button class="btn btn-danger btn-sm" @onclick="@(() => DeleteConsumption(record.Id))">Slett</button>
                </div>
            </div>
        }
    </div>

    <!-- Desktop table (md and up) -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th class="d-none d-lg-table-cell">Id</th>
                    <th>Dato</th>
                    <th>Kjøretøy</th>
                    <th class="d-none d-sm-table-cell">Kilometer</th>
                    <th>Antall liter</th>
                    <th class="d-none d-lg-table-cell">Pris</th>
                    <th class="d-none d-lg-table-cell">Forbruk</th>
                    <th>Sum</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in consumptionRecords)
                {
                    <tr>
                        <td class="d-none d-lg-table-cell">@record.Id</td>
                        <td>@record.Date.ToShortDateString()</td>
                        <td>@record.Make @record.Model</td>
                        <td class="d-none d-sm-table-cell">@record.Mileage</td>
                        <td>@record.DieselAdded</td>
                        <td class="d-none d-lg-table-cell">@record.DieselPricePerLiter</td>
                        <td class="d-none d-lg-table-cell">@(record.DieselConsumption?.ToString("F2") ?? "-")</td>
                        <td>@CurrencyFormatter.FormatKr(record.TotalCost)</td>
                        <td class="text-nowrap">
                            <button class="btn btn-primary btn-sm" @onclick="@(() => NavigationManager.NavigateTo($"/consumptionrecord/{record.Id}"))">Rediger</button>
                            <button class="btn btn-danger btn-sm" @onclick="@(() => DeleteConsumption(record.Id))">Slett</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- One shared summary used for all screen sizes -->
    <ConsumptionSummary
        TotalMilage="summary.TotalDriven"
        TotalDieselAdded="summary.TotalDieselAdded"
        TotalCost="summary.TotalCost"
        AveragePricePerLiter="summary.AveragePrice"
        AverageDieselConsumption="summary.AvgConsumption" />

</div>

@code {
    private List<ConsumptionRecordModel> consumptionRecords = new List<ConsumptionRecordModel>();
    private ConsumptionSummaryModel summary = new();

    [Parameter]
    public int VehicleId { get; set; }

    private DateTime? startDate = DateTime.UtcNow.AddYears(-1); // Standard: Ett år tilbake
    private DateTime? endDate = DateTime.UtcNow; // Standard: Dagens dato


 

    protected override async Task OnParametersSetAsync()
    {
        await GetFilteredRecords();
    }

    private async Task DeleteConsumption(int id)
    {
        await ConsumptionRecordService.DeleteConsumptionRecordAsync(id);        
        await GetFilteredRecords();
    }

    private async Task GetFilteredRecords()
    {
        var result = await ConsumptionRecordService.GetAllConsumptionRecordsAsync(VehicleId, startDate, endDate);
        if (result != null)
        {
            consumptionRecords = result.Records;
            summary = result.Summary;
        }
    }
}
