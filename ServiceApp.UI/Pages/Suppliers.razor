@page "/suppliers"
@inject ISupplierService supplierService
@attribute [Authorize]

<h3>Leverandører</h3>

<NavLink class="btn btn-primary mb-3" href="@("/supplier")">
    <i class="bi bi-plus-lg me-2"></i> Ny leverandør
</NavLink>

<div class="page-section mt-3">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3">
        @if (suppliers != null && suppliers.Count > 0)
        {
            @foreach (var supplier in suppliers)
            {
                <div class="col">
                    <div class="card card-service h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center gap-2">
                                <span class="date-pill">
                                    @(string.IsNullOrWhiteSpace(supplier.City) ? "Leverandør" : supplier.City)
                                </span>
                                @if (!string.IsNullOrWhiteSpace(supplier.ContactEmail))
                                {
                                    <span class="badge badge-service rounded-pill badge-clip text-truncate" title="@supplier.ContactEmail">
                                        @supplier.ContactEmail
                                    </span>
                                }
                            </div>

                            <h5 class="card-title mt-2 mb-1">
                                <a class="text-decoration-none" href="supplier/@supplier.Id">@supplier.Name</a>
                            </h5>

                            @if (!string.IsNullOrWhiteSpace(supplier.Address))
                            {
                                <p class="card-text text-muted mb-2">
                                    @supplier.Address
                                    @if (!string.IsNullOrWhiteSpace(supplier.PostalCode) || !string.IsNullOrWhiteSpace(supplier.City))
                                    {
                                        <span>, @supplier.PostalCode @supplier.City</span>
                                    }
                                </p>
                            }

                            <div class="d-flex flex-wrap gap-3 text-muted small">
                                @if (!string.IsNullOrWhiteSpace(supplier.ContactPhone))
                                {
                                    <span>Tlf: <strong>@supplier.ContactPhone</strong></span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-info mb-0">Ingen leverandører</div>
            </div>
        }
    </div>
</div>

@code {
    private List<SupplierModel> suppliers = new List<SupplierModel>();

    protected override async Task OnInitializedAsync()
    {
        suppliers = await supplierService.GetSuppliersAsync();
    }
}
